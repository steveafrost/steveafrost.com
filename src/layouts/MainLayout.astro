---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import Logo from '../components/Logo.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'Steve Frost - Software Engineer',
  description = 'Software engineer at Shopify based in Ann Arbor, MI. Building useful and beautiful web experiences.',
  ogImage,
} = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
] as const;

const currentPath = Astro.url.pathname;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl.href} />

    <!-- Self-hosted font preloads (critical weights only) -->
    <link rel="preload" href="/fonts/inter-latin-400.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/inter-latin-700.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:site_name" content="Steve Frost" />
    {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.site).href} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content={ogImage ? 'summary_large_image' : 'summary'} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={new URL(ogImage, Astro.site).href} />}

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="relative min-h-screen flex flex-col font-sans bg-mesh">
    <!-- Top gradient line -->
    <div class="h-1 w-full bg-gradient-to-r from-coral-400 via-coral-300 to-amber-400 animate-gradient" style="background-size: 300% 300%;" aria-hidden="true"></div>

    <header class="sticky top-0 z-50 border-b border-white/5 bg-zinc-950/70 backdrop-blur-xl">
      <nav class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
        <a href="/" class="group flex items-center gap-2 text-lg font-bold tracking-tight">
          <Logo />
          <span class="text-white transition-colors group-hover:text-gradient">steveafrost</span>
        </a>
        <ul class="flex items-center gap-1">
          {navLinks.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class:list={[
                  'relative rounded-full px-4 py-2 text-sm font-medium transition-all',
                  currentPath === href || (href !== '/' && currentPath.startsWith(href))
                    ? 'bg-white/10 text-white'
                    : 'text-zinc-400 hover:text-white hover:bg-white/5',
                ]}
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </header>

    <main class="mx-auto w-full max-w-5xl flex-1 px-6 py-16">
      <slot />
    </main>

    <footer class="border-t border-white/5">
      <div class="mx-auto flex max-w-5xl flex-col items-center gap-4 px-6 py-8 sm:flex-row sm:justify-between">
        <p class="text-sm text-zinc-600">
          &copy; {new Date().getFullYear()} Steve Frost &middot; Built with
          <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-coral-400 transition-colors">Astro</a>
          &
          <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-amber-400 transition-colors">Tailwind</a>
        </p>
        <div class="flex items-center gap-5">
          <a href="https://github.com/steveafrost" target="_blank" rel="noopener noreferrer" class="text-zinc-600 transition-all hover:text-coral-400 hover:scale-110" aria-label="GitHub">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="mailto:hello@steveafrost.com" class="text-zinc-600 transition-all hover:text-amber-400 hover:scale-110" aria-label="Email">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
